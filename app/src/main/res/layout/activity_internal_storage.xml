<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InternalStorageActivity">

    <TextView
        android:id="@+id/textViewIS"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Internal Storage Example"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/editTextIS"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewIS"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Enter Data Here"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button1IS"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#052370"
        android:textColor="#fff"
        app:layout_constraintTop_toBottomOf="@+id/editTextIS"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button2IS"
        android:layout_marginStart="20dp"
        android:text="save"/>

    <Button
        android:id="@+id/button2IS"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#d0cfea"
        app:layout_constraintTop_toBottomOf="@+id/editTextIS"
        app:layout_constraintStart_toEndOf="@+id/button1IS"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:text="retrive"/>

    <Button
        android:id="@+id/button3IS"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#1a1e5b"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:text="next"/>


</android.support.constraint.ConstraintLayout>